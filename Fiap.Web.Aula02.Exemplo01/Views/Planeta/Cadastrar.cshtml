@model Planeta

@{
    ViewData["Title"] = "Cadastrar";
}

    <form asp-action="Cadastrar">
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DataDescoberta">Data de descoberta</label>
            <input asp-for="DataDescoberta" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Habitavel">Habitavel</label>
            <input asp-for="Habitavel" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TempoRotacao">Tempo de rotação</label>
            <input asp-for="TempoRotacao" class="form-control" />
        </div>
        <input type="submit" value="Cadastrar" class="btn btn-dark" />
        <a asp-action="Listar" asp-controller="planeta" class="btn btn-outline-success">Listar planetas</a>
    </form>
